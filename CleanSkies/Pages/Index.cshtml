@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Map container -->
<div id="map" style="height: 90vh; width: 100%;"></div>

<!-- Sidebar (hidden by default; slides in on click) -->
<aside id="sidebar"

       style="
        position:fixed; top:64px; left:0; width:320px;
        height:calc(100vh - 64px - 48px);
        background:#fff; box-shadow:0 10px 30px rgba(0,0,0,.1);
        border-right:1px solid #eee; padding:16px;
        transform:translateX(-100%); transition:transform .3s ease;
        z-index: 10000;           
       ">
        
  <div style="display:flex; align-items:center; justify-content:space-between;">
    <h2 id="cityName" style="font-size:20px; font-weight:600;">City</h2>
    <button id="closeSidebar" style="border:none;background:#f3f4f6; padding:4px 8px; border-radius:6px; cursor:pointer;">✕</button>
  </div>

  <div style="margin-top:12px;">
    <div id="aqiBox" style="background:#e5e7eb; border-radius:8px; padding:12px; text-align:center;">
      <div style="font-size:14px;">AQI</div>
      <div id="aqiValue" style="font-size:28px; font-weight:700;">--</div>
      <div id="aqiCat" style="font-size:14px; font-weight:600;">Category</div>
    </div>

    <div style="margin-top:12px;">
      <div style="font-size:12px; color:#6b7280;">Health advice</div>
      <p id="advice" style="margin-top:4px;">—</p>
    </div>

    <div style="display:grid; grid-template-columns:1fr 1fr; gap:12px; margin-top:8px;">
      <div>
        <div style="font-size:12px; color:#6b7280;">Temp</div>
        <div id="temp">—</div>
      </div>
      <div>
        <div style="font-size:12px; color:#6b7280;">Wind</div>
        <div id="wind">—</div>
      </div>
    </div>

    <div style="border-top:1px solid #eee; margin-top:12px; padding-top:8px;">
      <div style="font-size:12px; color:#6b7280;">Source</div>
      <div id="source" style="font-size:14px;">OpenAQ (sample)</div>
      <div id="updated" style="font-size:12px; color:#6b7280;">Updated: —</div>
    </div>
  </div>
</aside>

@section Scripts {
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script src="~/js/map.js"></script>
}
